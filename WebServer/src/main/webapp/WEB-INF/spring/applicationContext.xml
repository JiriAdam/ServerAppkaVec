     http://www.springframework.org/schema/jee 
     http://www.springframework.org/schema/jee/spring-jee-3.0.xsd"
     >

    
  
    <context:component-scan base-package="cz.groupid.web.beans" /> 
    <context:component-scan base-package="cz.groupid.manager" />  
    <context:component-scan base-package="cz.groupid.spring" /> 
	<context:component-scan base-package="cz.groupid.web.controller" />
	<context:component-scan base-package="cz.groupid.web.dialect" />
	<context:component-scan base-package="cz.groupid.web.validator" />
	<context:component-scan base-package="cz.groupid.web.comparator" />
	<context:component-scan base-package="cz.groupid.jmx"/>
    <context:spring-configured/>
    
    <tx:annotation-driven transaction-manager="webServiceTransactionManager"/>
 
    <task:annotation-driven scheduler="totalScheduler"/>
    <task:scheduler id="totalScheduler" pool-size="10"/>
	

